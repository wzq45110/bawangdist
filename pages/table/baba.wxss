.mainhome {
  position: relative;
  width: 100%;
  height: 100%;
}
.mainhome .hometop {
  position: fixed;
  top: 0;
  z-index: 100;
  background-color: #ff7900;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.mainhome .hometop .leftte {
  margin-bottom: 15rpx;
  position: absolute;
  left: 20rpx;
}
.mainhome .hometop .leftte text {
  margin-right: 10rpx;
  color: #fff;
}
.mainhome .hometop .secondcol {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}
.mainhome .hometop .secondcol .inputserch {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  width: 483rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  padding: 0 10rpx;
  font-size: 26rpx;
  margin-bottom: 15rpx;
}
.mainhome .pic,
.mainhome swiper {
  height: 350rpx;
}
.mainhome .pic image,
.mainhome swiper image {
  height: 100%;
  width: 750rpx;
}
.mainhome swiper {
  margin-top: 80rpx;
}
.mainhome .wepjiang {
  margin-top: 40rpx;
}
.mainhome .pic {
  margin-bottom: 30rpx;
}
.mainhome .wenzixia,
.mainhome .textp {
  padding: 0 35rpx;
}
.mainhome .wenzixia,
.mainhome .textp,
.mainhome .shangbu {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.mainhome .anniuniu {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #ff7900;
  border-radius: 20rpx;
  color: #fff;
  font-size: 26rpx;
}
.mainhome .zanan {
  width: 60rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  background-color: #fff;
  border: 1rpx solid #ff7900;
  color: #ff7900;
  border-radius: 10rpx;
}
.mainhome .van-popup {
  padding-top: 30rpx;
}
.mainhome .van-popup .van-row {
  display: flex;
  justify-content: space-between;
  padding-left: 40rpx;
}
.mainhome .van-popup .van-row .van-col {
  width: 200rpx;
  height: 80rpx;
  margin: 25rpx 0;
  line-height: 80rpx;
  text-align: center;
  border-radius: 20rpx;
  border: 2rpx solid #ccc;
}
.mainhome .butomin {
  width: 88%;
  height: 100rpx;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 38rpx;
  padding: 0 10rpx;
}
